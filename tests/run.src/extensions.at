AT_SETUP([COMP-5])

AT_DATA([dump.java], [
import jp.osscons.opensourcecobol.libcobj.data.*;
import jp.osscons.opensourcecobol.libcobj.call.*;

public class dump implements CobolRunnable {

  @Override
  public int run(CobolDataStorage... argStorages) {
      CobolDataStorage storage = argStorages[[0]];
      long p = argStorages[[1]].longValue();

      if(p == 1) {
          for(int i=0; i < 4; ++i) {
              System.out.printf("%02x", storage.getByte(i));
          }
      } else {
          System.out.printf("%08d", storage.intValue());
      }
      System.out.println("");
      return 0;
  }

  @Override
  public void cancel() {
  }

  @Override
  public boolean isActive() {
    return false;
  }
}
])

AT_CHECK([javac dump.java])

AT_DATA([prog.cob], [
       IDENTIFICATION   DIVISION.
       PROGRAM-ID.      prog.
       DATA             DIVISION.
