AT_SETUP([dollarif defined - true])

AT_DATA([prog.cob], [
       IDENTIFICATION   DIVISION.
       PROGRAM-ID.      prog.
       PROCEDURE DIVISION.
      $IF SW1 DEFINED
           DISPLAY 'SW1 DEFINED'.
      $END
           STOP RUN.
])

AT_CHECK([${COMPILE_MODULE} --constant=SW1 -o prog prog.cob])
AT_CHECK([${COBCRUN} prog], [0], [SW1 DEFINED
])

AT_CLEANUP

