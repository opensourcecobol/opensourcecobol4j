AT_SETUP([ftraceall test 1])

AT_DATA([prog.cbl], [       IDENTIFICATION              DIVISION.
       PROGRAM-ID.                 prog.

       ENVIRONMENT DIVISION.
       INPUT-OUTPUT SECTION.
       FILE-CONTROL.
           SELECT SF ASSIGN TO 'test.txt'
                ORGANIZATION IS SEQUENTIAL
                FILE STATUS IS FILE-STATUS.

       DATA                        DIVISION.
       FILE SECTION.
       FD SF.
         01 REC PIC X(10).

       WORKING-STORAGE             SECTION.
       01 C PIC 9 VALUE 0.
       01 FILE-STATUS PIC 99.
       01 arg pic X(10) VALUE "argument".

       PROCEDURE                   DIVISION.
       MAIN SECTION.

       DISPLAY-PROC.
           DISPLAY "hello".

       CALCULATE-PROC.
           MOVE 0 TO C.
           ADD 1 TO C.
           SUBTRACT 1 FROM C.
           MULTIPLY 1 BY C.
           DIVIDE 1 INTO C.
           COMPUTE C = C.

       FILE-TEST SECTION.

       FIRST-IO.
           OPEN OUTPUT SF.
           MOVE "file" to REC.
           WRITE REC.
           CLOSE SF.

       SECOND-IO.
           OPEN INPUT SF.
           INITIALIZE REC.
           READ SF.
           display "rec: " rec.
           CLOSE SF.

       FINALL SECTION.
           STOP RUN.
])


AT_CHECK([${COMPILE} -ftrace prog.cbl])
AT_CHECK([${RUN_MODULE} prog 2>/dev/stdout 1>/dev/null], [0],
[PROGRAM-ID: prog: ENTRY prog
PROGRAM-ID: prog: MAIN SECTION
PROGRAM-ID: prog: DISPLAY-PROC
PROGRAM-ID: prog: CALCULATE-PROC
PROGRAM-ID: prog: FILE-TEST SECTION
PROGRAM-ID: prog: FIRST-IO
PROGRAM-ID: prog: SECOND-IO
PROGRAM-ID: prog: FINALL SECTION
PROGRAM-ID: prog: MAIN PARAGRAPH
])

AT_CHECK([${COMPILE} -ftraceall prog.cbl])
